        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/separator_size_10"
            android:background="@drawable/side_ovalmid"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/side_ovalisi"
                android:gravity="center"
                android:text="Kondisi Fisik Rumah Pada Aspek Keselamatan"
                style="@style/MyTemaH1"
                android:textSize="@dimen/text_size_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Pondasi : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/pondasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Kondisi Kolom dan Balok : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

