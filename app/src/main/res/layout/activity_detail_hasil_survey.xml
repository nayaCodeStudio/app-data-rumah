<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgKuningMuda"
    tools:context=".surveyresult.DetailHasilSurveyActivity">

    <View
        android:id="@+id/viewUtama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/side_ovalbuttom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/viewUtama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyTemaH1"
            android:gravity="center"
            android:text="Detail Hasil Survey "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyTemaH2"
            android:gravity="center"
            android:text="Pendataan Rumah Tidak Layak Huni"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/side_ovalmid"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/side_ovalisi"
                    android:gravity="center"
                    android:text="Identitas Surveyor"
                    style="@style/MyTemaH1"
                    android:textSize="@dimen/text_size_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Surveyor : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/namaSurveyor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/emailSurveyor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. HP : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/nomorHPSurveyor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. KTP : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/nomorKTPSurveyor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/alamatSurveyor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/separator_size_10"
                android:background="@drawable/side_ovalmid"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/side_ovalisi"
                    android:gravity="center"
                    android:text="Lokasi Tempat yang Disurvey"
                    style="@style/MyTemaH1"
                    android:textSize="@dimen/text_size_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Nama Desa/Kelurahan : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/namaDesa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Nama Kecamatan : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/namaKecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Nama Kabupaten/Kota : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/namaKabupaten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. Nama Provinsi : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/namaProvinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. Tanggal/Waktu Survey Tempat : "
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/waktuSurvey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        style="@style/MyTemaH3"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/separator_size_10"
            android:background="@drawable/side_ovalmid"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/side_ovalisi"
                android:gravity="center"
                android:text="Identitas Penghuni Rumah"
                style="@style/MyTemaH1"
                android:textSize="@dimen/text_size_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Nomor Urut Rumah : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/nomorRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Nama Lengkap : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/namaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Usia (Tahun) : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/usia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Pendidikan Terakhir : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/pendidikanTerakhir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Jenis Kelamin : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/jenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Alamat Lengkap : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/alamatLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Foto Kondisi Atap Rumah Yang Disurvey : "
                style="@style/MyTemaH3"
                android:textSize="@dimen/text_size_12"/>

            <ImageView
                android:id="@+id/fotoAtap"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Foto Kondisi Dinding Rumah Yang Disurvey : "
                style="@style/MyTemaH3"
                android:textSize="@dimen/text_size_12"/>

            <ImageView
                android:id="@+id/fotoDinding"
                android:layout_width="170dp"
                android:scaleType="fitXY"
                android:layout_height="110dp"
                android:src="@drawable/no_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Foto Kondisi Lantai Rumah Yang Disurvey : "
                style="@style/MyTemaH3"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/fotoLantai"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. Ttitik Koordinat Lokasi : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/titikKoordinat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11. Nomor KTP (NIK) : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/nomorKTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12. Jumlah KK dalam 1 Rumah : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/jumlahKK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13. Pekerjaan Utama : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/pekerjaanUtama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14. Penghasilan atau Pengeluaran Perbulan : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/penghasilanPengeluaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15. Status Kepemilikan Tanah : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kepemilikanTanah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16. Status Kepemilikan Rumah : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/kepemilikanRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17. Aset Rumah Ditempat Lain : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/asetRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18. Aset Tanah Ditempat Lain : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/asetTanah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19. Pernah Mendapatkan Bantuan Perumahan : "
                    style="@style/MyTemaH3"
                    android:textSize="@dimen/text_size_12"/>

                <TextView
                    android:id="@+id/bantuanPerumahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
