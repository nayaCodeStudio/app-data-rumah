<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_ovalmid">

            <ImageView
                android:id="@+id/fotoRumah"
                android:layout_width="170dp"
                android:layout_height="126dp"
                android:layout_marginStart="@dimen/separator_size_16"
                android:layout_marginTop="@dimen/separator_size_16"
                android:layout_marginBottom="@dimen/separator_size_16"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/no_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/fotoRumah"
                card_view:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="Pemilik Rumah : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvPemilikRumah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="-"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="Alamat Pemilik Rumah : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAlamatPemilikRumah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="-"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="Disurvey Oleh : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSurveyor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="-"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="Tanggal Survey : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTanggalSurvey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyTemaH3"
                        android:text="-"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>